<h1>Shoe Brands</h1>

<div class="row">
  <div class="col-sm-6">
    <h2>Brands</h2>
    <% if @brands.any? %>
      <ul>
        <% @brands.each do |brand| %>
          <li> <a href="/brand/<%=brand.id%>"><%= brand.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>There are no brands yet</h3>
    <% end %>
    <h2><a href="/">Home</a></h2>
  </div>
  <div class="col-sm-6">
    <h3>Add Brand</h3>
    <form action="/brands" method="post">
      <label for="name">Name of Brand:</label>
      <input type="text" name="name" required>
      <button type="submit" name="button">Add Brand</button>
    </form>
  </div>
</div>
