<h1>Shoe Stores</h1>

<div class="row">
  <div class="col-sm-6">
    <h2>Stores</h2>
    <% if @stores.any? %>
      <ul>
        <% @stores.each do |store| %>
          <li> <a href="/store/<%=store.id%>"><%= store.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      <h3>There are no stores yet</h3>
    <% end %>
    <h2><a href="/">Home</a></h2>
  </div>
  <div class="col-sm-6">
    <h3>Add Store</h3>
    <form action="/stores" method="post">
      <label for="name">Name of Store:</label>
      <input type="text" name="name">
      <button type="submit" name="button">Add Store</button>
    </form>
  </div>
</div>
